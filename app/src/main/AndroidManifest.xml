<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cse10">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true">
        <activity android:name=".Activities.CGPA_Calculator"></activity>
        <activity
            android:name=".Activities.Help"
            android:parentActivityName=".Activities.MainMenu" />
        <activity
            android:name=".Activities.AddBook"
            android:parentActivityName=".Activities.BookArchiveMenu" />
        <activity
            android:name=".Activities.BookArchiveMenu"
            android:parentActivityName=".Activities.MainMenu" />
        <activity android:name=".Activities.FullRoutine" />
        <activity android:name=".Activities.AboutUs" />
        <activity android:name=".Activities.ClassRoutine" />
        <activity
            android:name=".Activities.AddNotice"
            android:theme="@style/Theme.Transparent" />
        <activity android:name=".Activities.NoticeMenu" />
        <activity android:name=".Activities.Profile" />
        <activity android:name=".Activities.MainMenu" />
        <activity android:name=".LoginActivities.SignUp" />
        <activity android:name=".LoginActivities.Login" />
        <activity android:name=".LoginActivities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>